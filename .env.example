# MCP Server Configuration
VSCODE_MCP_API_KEY=your_vscode_mcp_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
CURSOR_API_KEY=your_cursor_api_key_here
WINDSURF_API_KEY=your_windsurf_api_key_here

# Application Settings
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# API Keys (add any additional API keys below)
# EXTERNAL_API_KEY=your_external_api_key_here

# Feature Flags (true/false)
ENABLE_EXPERIMENTAL_FEATURES=false

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000  # 24 hours in milliseconds

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds

# Email Configuration (if applicable)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@example.com

# Storage Configuration (if using cloud storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_BUCKET_NAME=your-bucket-name

# Monitoring (if applicable)
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Feature-specific Configurations
# FEATURE_FLAG_NEW_UI=true
# MAX_UPLOAD_SIZE=5242880  # 5MB in bytes

# Development Overrides
# DEBUG=app:*,api:*
# NODE_OPTIONS=--inspect

# Testing Environment (used in test scripts)
# TEST_DB_NAME=test_database
# TEST_DB_HOST=localhost
# TEST_DB_PORT=5432

# Security Headers (CSP, HSTS, etc.)
# CONTENT_SECURITY_POLICY=default-src 'self'
# STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains

# Performance Tuning
# NODE_MAX_OLD_SPACE_SIZE=4096  # 4GB memory limit for Node.js
# UV_THREADPOOL_SIZE=16  # Increase libuv thread pool size

# Custom Environment Variables
# Add any project-specific environment variables below this line
# CUSTOM_CONFIG=value
